{
  "compilerOptions": {
    "baseUrl": "./src",
    "esModuleInterop": true,
    "lib": ["es2017", "esnext", "dom"],
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2017"
  },
  "include": ["./","src"],
  "exclude": [
    "scripts",
    "node_modules",
    "build",
    "coverage",
    ".docker",
    "public",
    "**/__mocks__", "**/__tests__"
  ]
}
